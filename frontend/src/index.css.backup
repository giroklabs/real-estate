  transform: translateY(-50%);
  font-size: 8px;
  color: #a0a0a0;
  transition: transform 0.2s ease;
}

.month-select-container.open .month-select-toggle::after {
  transform: translateY(-50%) rotate(180deg);
}

.month-select-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(15, 15, 35, 0.98);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  z-index: 1000;
  max-height: 300px;
  overflow-y: auto;
  margin-top: 0.5rem;
  padding: 0.5rem 0;
}

.month-select-option {
  display: block;
  width: 100%;
  padding: 0.75rem 1rem;
  background: none;
  border: none;
  color: #ffffff;
  font-size: 0.8rem;
  text-align: left;
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 1px solid rgba(59, 130, 246, 0.1);
  font-weight: 500;
  position: relative;
}

.month-select-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.month-select-option:hover::before {
  opacity: 1;
}

.month-select-option:first-child {
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}

.month-select-option:last-child {
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
  border-bottom: none;
}

.month-select-option:hover {
  background: rgba(255, 255, 255, 0.05);
}

.month-select-option.selected {
  background: rgba(59, 130, 246, 0.1);
  color: #ffffff;
  font-weight: 600;
  border-left: 3px solid #3b82f6;
  padding-left: 0.875rem;
}

.month-select-option.selected::before {
  content: '✓';
  margin-right: 0.5rem;
  color: #3b82f6;
  font-weight: bold;
  font-size: 0.875rem;
}

/* 중복 선택된 월 표시 - 체크표시만으로 구분 */
.month-select-option.selected.multiple {
  background: rgba(59, 130, 246, 0.15);
  color: #ffffff;
  border-left-color: #3b82f6;
}

.month-select-option.selected.multiple::before {
  content: '✓✓';
  color: #3b82f6;
  font-weight: bold;
}
